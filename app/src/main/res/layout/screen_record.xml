<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/floor"
    tools:context=".screen.RecordScreen">

    <ImageView
        android:id="@+id/text"
        android:layout_width="282dp"
        android:layout_height="37dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/score_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/text">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_score"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/first_cup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/first_cup" />

            <TextView
                android:id="@+id/first_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/galindo"
                android:text="player"
                android:layout_toEndOf="@id/first_cup"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/first_player_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/galindo"
                android:text="00:00"
                android:layout_toStartOf="@id/first_player_count"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/first_player_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/galindo"
                android:gravity="center_vertical"
                android:text="75"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/shape_score"
            android:backgroundTint="#A95D17"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/second_cup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/second_cup" />

            <TextView
                android:id="@+id/second_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/galindo"
                android:text="player"
                android:layout_toEndOf="@id/second_cup"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/second_player_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/galindo"
                android:text="00:00"
                android:layout_toStartOf="@id/second_player_count"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/second_player_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/galindo"
                android:gravity="center_vertical"
                android:text="75"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/shape_score"
            android:backgroundTint="#CA782D"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/third_cup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/third_cup" />

            <TextView
                android:id="@+id/third_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/galindo"
                android:text="player"
                android:layout_toEndOf="@id/third_cup"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/third_player_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/galindo"
                android:text="00:00"
                android:layout_toStartOf="@id/third_player_count"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/third_player_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/galindo"
                android:gravity="center_vertical"
                android:text="75"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/shape_score"
            android:backgroundTint="#E49A56"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fourth"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/galindo"
                android:gravity="center"
                android:text="4"
                android:textColor="#920000"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/fourth_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/galindo"
                android:text="player"
                android:layout_toEndOf="@id/fourth"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/fourth_player_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/galindo"
                android:text="00:00"
                android:layout_toStartOf="@id/fourth_player_count"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fourth_player_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/galindo"
                android:gravity="center_vertical"
                android:text="75"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/grass"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>